Math  {
                   Avalderivatives
                   Iterations = 20
                   ExitOnFailure
                   Notdamped = 100
                   RelErrControl
                   BreakCriteria{ Current (Contact = "Anode" AbsVal = 200)}
                   CNormPrint
                   Number_Of_Threads= 5   
}


Solve {
   Poisson
   Coupled { Poisson Electron }
   Coupled { Poisson Electron Hole }	
  
   Quasistationary (
      InitialStep= 1e-4 Increment= 1.5 Decrement= 2
      MinStep= 1e-10 MaxStep= 0.5
      Goal { Name= Gate Value=20}
   ){ Coupled { Poisson Electron Hole } }
   
   NewCurrentPrefix="IdVd_"
   Continuation (
   	    Name = "Anode"
      InitialVStep= 1e-4
      MinVoltage=0 MaxVoltage=50
      MinCurrent=0 MaxCurrent=200
      Iadapt=1e-10
   ){ Coupled { Poisson Electron Hole } }
}